require("any-promise/register")("bluebird");
const yargs = require('yargs');

var logo = [
	"                                                   ",
	"                                                   ",
	"                                                   ",
	"     ██╗     ███████╗ █████╗ ███████╗   ██╗███████╗",
	"     ██║     ██╔════╝██╔══██╗██╔════╝   ██║██╔════╝",
	"     ██║     █████╗  ███████║█████╗     ██║███████╗",
	"     ██║     ██╔══╝  ██╔══██║██╔══╝██   ██║╚════██║",
	"     ███████╗███████╗██║  ██║██║   ╚█████╔╝███████║",
	"     ╚══════╝╚══════╝╚═╝  ╚═╝╚═╝    ╚════╝ ╚══════╝",
	"                                     Author: xyezir",
	"                                                   ",
	"                                                   "
].join('\n')

const argv = yargs.usage(`Leafjs Framework Version ${require('../package.json').version} \n ${logo} \nUsage: $0 <command> [options]`)
						.commandDir('cmds')
						.help('h')
						.alias('h', 'help')
						.version(require('../package.json').version)
						.example('leaf serve -p 8080', ' Running Leafjs Http Server with 8080 port')
						.check((argv) => {
							if ( argv.h || argv.l ) {
								return true;
							}
							if (!argv._.length) {
								throw "You must provide at least a command"
							}
							return true;
						}).argv;
